<div class="panel panel-default">
  <div class="panel-heading headingOne mustShowOnApp" role="tab">
    <div class="panel-title subheader-menu-container">
      <!-- Single button -->
    </div>
    <span class="advanced-btn-wrapper">
	<span class="glyphicon glyphicon-search"></span>
	<!--
      <span class="glyphicon glyphicon-search toggle-btn openBtn"></span>
      <span class="glyphicon glyphicon-search toggle-btn closeBtn"></span>

      <span class="advanced-btn">
        <span class="isShow">Show</span>
        <span class="isHide">Hide</span>
      </span>
	  -->
    </span>

  </div>


  <div id="checkStatus">
    <div class="panel-body">

      <form class="form-horizontal">
        <!-- applicant -->
        <div class="form-group">
          <label for="status" class="col-sm-2 control-label">Applicant</label>
          <div class="col-sm-6 user-container">

          </div>
        </div>

        <div class="advanced-form">
          <!-- Approval Date -->
          <div class="form-group">
            <label for="approval_date" class="col-xs-12 col-sm-2 control-label">Approval Date</label>
            <div class="approval_date_pick1 col-xs-6 col-sm-3">
              <div class="approval-from-datepicker-container"></div>
            </div>
            <div class="approval_date_pick2 col-xs-6 col-sm-3">
              <div class="approval-to-datepicker-container"></div>
            </div>
          </div>


          <!-- status -->
          <div class="form-group row">
            <label for="status" class="col-sm-2 control-label">Status</label>
            <div class="col-sm-6 status-container">
              <!-- status Select list here -->
            </div>
          </div>

          <!-- Refer ID -->
          <div class="form-group">
            <label for="ref_id" class="col-xs-12 col-sm-2 control-label">Ref. ID</label>
            <div class="col-xs-12 col-sm-6">
              <input type="text" id="txtindexrefid" name="refid" class="search-field form-control" placeholder="" value="<%= refid %>">
            </div>
          </div>

          <!-- create date -->
          <div class="form-group">
            <label for="create_date" class="col-xs-12 col-sm-2 control-label">Create Date</label>
            <div class="create_date_pick1 col-xs-6 col-sm-3">
              <div class="create-from-datepicker-container"></div>

            </div>
            <div class="create_date_pick2 col-xs-6 col-sm-3">
              <div class="create-to-datepicker-container"></div>

            </div>
          </div>

          <!-- keyword -->
          <div class="form-group">
            <label for="ref_id" class="col-xs-12 col-sm-2 control-label">Keyword</label>
            <div class="col-xs-12 col-sm-6">
              <textarea name="keyword" class="form-control search-field"><%= keyword %></textarea>
            </div>
          </div>

        </div>


        <div class="form-group buttons-container">
          <div class="text-center available-buttons">
            <input type="button" class="btn btn-primary" value="Search" id="btnSearchCheckStatus">
          </div>
        </div>

      </form>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table id="approvalHistoryTable" class="table table-striped table-bordered table-grey" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Approval Date</th>
        <th>Applicant</th>
        <th>Ref. ID / Summary</th>
        <th>Status</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>Approval Date</th>
        <th>Applicant</th>
        <th>Ref. ID / Summary</th>
        <th>Status</th>
      </tr>
    </tfoot>
    <!-- <tbody id="reqbody"></tbody> -->

  </table>
</div>
