<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="headingOne">
    <h3 class="panel-title">
        <!-- Single button -->
        <div class="btn-group check-status">
          <button type="button" class="btn btn-default dropdown-toggle btn-block" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Check Status
            <span class="glyphicon glyphicon-menu-down"></span>
          </button>

          <ul class="dropdown-menu">
            <li>
              <a href="new-request.html">New Request</a>
            </li>
          </ul>
        </div>
    </h3>
  </div>


  <div id="checkStatus">
    <div class="panel-body">

      <form class="form-horizontal">
        <div class="form-group row">
          <label for="status" class="col-sm-2 control-label">Status</label>
          <div class="col-sm-6">
            <select id="ddindexstatus" class="form-control"></select>
          </div>
        </div>
        <div class="form-group">
          <label for="ref_id" class="col-sm-2 control-label">Ref. ID</label>
          <div class="col-sm-6">
            <input type="text" id="txtindexrefid" class="form-control" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label for="create_date" class="col-xs-12 col-sm-2 control-label">Create Date</label>
          <div class="col-xs-3 col-sm-3">
            <div class="input-group date pick-date-start" data-provide="datepicker">
              <input type="text" id="txtIndexfromdate" class="form-control">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
              </div>
            </div>
          </div>
          <div class="col-xs-3 col-sm-3">
            <div class="input-group date pick-date-end" data-provide="datepicker">
              <input type="text" id="txtIndextodate" class="form-control">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="status" class="col-sm-2 control-label">Applicant</label>
          <div class="col-sm-6">
            <select id="ddIndexapplicant" class="form-control"></select>
          </div>
        </div>

        <div class="form-group buttons-container">
          <div class="text-center available-buttons">
            <input type="button" class="btn btn-primary" value="Search" id="btnSearchCheckStatus">
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
<div class="table-responsive">
  <table id="statusTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Last Action Date</th>
        <th>Applicatant</th>
        <th>Ref. ID / Summary</th>
        <th>Status</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>Last Action Date</th>
        <th>Applicatant</th>
        <th>Ref. ID / Summary</th>
        <th>Status</th>
      </tr>
    </tfoot>
    <!-- <tbody id="reqbody"></tbody> -->

  </table>
</div>
